{
    "name": "spatie/ssl-certificate-chain-resolver",
    "description": "SSL certificate chain resolver",
    "keywords": [
        "ssl-certificate-chain-resolver",
        "ssl",
        "certificate",
        "chain",
        "https"
    ],
    "homepage": "https://github.com/spatie/ssl-certificate-chain-resolver",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/collections": "^9.17",
        "phpseclib/phpseclib": "^3.0",
        "symfony/console": "^6.0.9|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\CertificateChain\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\CertificateChain\\Test\\": "tests"
        }
    },
    "bin": [
        "ssl-certificate-chain-resolver"
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
